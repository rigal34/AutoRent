{% extends 'base.html.twig' %}

{% block title %}
    Détails du véhicule
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('css/vehicules-list.css') }}">
{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
    {% if vehicule.images is not empty %}
       <div id="vehicleCarousel" class="carousel slide vehicle-detail-carousel" data-bs-ride="carousel">
    <div class="carousel-inner">
                {% for key, image in vehicule.images %}
                <div class="carousel-item {{ key == 0 ? 'active' : '' }}">
                    <img src="{{ asset('images/' ~ image) }}" class="d-block w-100 rounded carousel-image" alt="Photo {{ key + 1 }}">
                </div>
                {% endfor %}
            </div>

              <button class="carousel-control-prev" type="button" data-bs-target="#vehicleCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
            <button class="carousel-control-next" type="button" data-bs-target="#vehicleCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>

            <div class="carousel-indicators">
                {% for key, image in vehicule.images %}
                <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="{{ key }}" 
                        class="{{ key == 0 ? 'active' : '' }}"></button>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>

        <div class="col-md-4 mt-5">
            <h2 class="mb-3">{{ vehicule.nom }}</h2>
            <p class="text-muted">{{ vehicule.description | raw }}</p>

            <div class="bg-light p-3 rounded my-4">
                <h4 class="mb-0">
                    <strong>{{ vehicule.tarifJournalier }} €</strong>
                    <span class="fs-6 text-muted">/ jour</span>
                </h4>
            </div>

            {#  Vérifier le statut en base de donnee  UPDATE vehicule SET statut = 1 WHERE statut IS NULL; #}
           {% if vehicule.statut %}
    {# Bouton de réservation #}
    <div class="d-grid">
        <a href="{{ path('app_reservation_new', {'id': vehicule.id}) }}" class="btn btn-primary btn-lg">
            Réserver ce véhicule
        </a>
    </div>
{% else %}
    {# Message d'indisponibilité stylé #}
    <div class="d-grid">
        <div class="alert alert-warning text-center border-0 shadow-sm">
            <div class="mb-2">
                <i class="fas fa-times-circle text-danger fs-4"></i>
            </div>
            <h6 class="alert-heading text-danger">Véhicule indisponible</h6>
            <p class="mb-2 text-muted small">Ce véhicule est actuellement réservé</p>
            
            {% if vehicule.prochaineDateDisponible %}
                <div class="bg-info bg-opacity-10 rounded p-2 mt-3">
                    <i class="fas fa-calendar-check text-info"></i>
                    <strong class="text-info">Disponible dès le :</strong>
                    <div class="fs-5 fw-bold text-dark">
                        {{ vehicule.prochaineDateDisponible|date('d/m/Y') }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}
        </div>
    </div>

</div>

{% endblock %}
