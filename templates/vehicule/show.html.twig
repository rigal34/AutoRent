{% extends 'base.html.twig' %}

{% block title %}
    Détails du véhicule
{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <img src="{{ asset('images/' ~ vehicule.imagePrincipale) }}" class="img-fluid rounded" alt="{{ vehicule.nom }}">
        </div>

        <div class="col-md-4 mt-5">
            <h2 class="mb-3">{{ vehicule.nom }}</h2>
            <p class="text-muted">{{ vehicule.description | raw }}</p>

            <div class="bg-light p-3 rounded my-4">
                <h4 class="mb-0">
                    <strong>{{ vehicule.tarifJournalier }} €</strong>
                    <span class="fs-6 text-muted">/ jour</span>
                </h4>
            </div>

            {#  Vérifier le statut en base de donnee  UPDATE vehicule SET statut = 1 WHERE statut IS NULL; #}
           {% if vehicule.statut %}
    {# Bouton de réservation #}
    <div class="d-grid">
        <a href="{{ path('app_reservation_new', {'id': vehicule.id}) }}" class="btn btn-primary btn-lg">
            Réserver ce véhicule
        </a>
    </div>
{% else %}
    {# Message d'indisponibilité stylé #}
    <div class="d-grid">
        <div class="alert alert-warning text-center border-0 shadow-sm">
            <div class="mb-2">
                <i class="fas fa-times-circle text-danger fs-4"></i>
            </div>
            <h6 class="alert-heading text-danger">Véhicule indisponible</h6>
            <p class="mb-2 text-muted small">Ce véhicule est actuellement réservé</p>
            
            {% if vehicule.prochaineDateDisponible %}
                <div class="bg-info bg-opacity-10 rounded p-2 mt-3">
                    <i class="fas fa-calendar-check text-info"></i>
                    <strong class="text-info">Disponible dès le :</strong>
                    <div class="fs-5 fw-bold text-dark">
                        {{ vehicule.prochaineDateDisponible|date('d/m/Y') }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}
        </div>
    </div>
</div>

{% endblock %}
