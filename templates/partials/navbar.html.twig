    </div>
</nav>

<!-- üî• SCRIPT POUR L'EFFET SCROLL -->
<script>
    // üîí Protection contre les ex√©cutions multiples
    if (!window.navbarScrollInitialized) {
        window.navbarScrollInitialized = true;
        
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üéâ DOM est pr√™t depuis navbar.html.twig !');

            window.addEventListener('scroll', function() {
                const navbar = document.querySelector('.navbar-prestige');

                if (navbar) {
                    if (window.scrollY > 50) {
                        navbar.style.background = 'rgba(15, 15, 15, 0.95)';
                        navbar.style.boxShadow = '0 4px 25px rgba(255, 193, 7, 0.4)';
                        console.log('üìú Scroll d√©tect√© !');
                    } else {
                        navbar.style.background = 'linear-gradient(135deg, #0f0f0f 0%, #1a1a1a 100%)';
                        navbar.style.boxShadow = '0 2px 15px rgba(255, 193, 7, 0.2)';
                        console.log('üîù Retour en haut !');
                    }
                } else {
                    console.log('‚ùå Navbar non trouv√©e !');
                }
            });
        });
    }
</script>