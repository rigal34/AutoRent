{# templates/categorie/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Catégorie : {{ categorie.nom }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Véhicules de la catégorie : <strong>{{ categorie.nom }}</strong></h1>
        
        <div class="row">
            {# On fait une boucle sur les véhicules qui sont DANS la catégorie #}
            {# La variable "categorie" nous a été envoyée par le contrôleur #}
            {% for vehicule in categorie.vehicules %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                       
                        <img src="{{ asset('images/' ~ vehicule.imagePrincipale) }}" class="card-img-top" alt="{{ vehicule.nom }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ vehicule.nom }}</h5>
                            <p class="card-text">{{ (vehicule.description|slice(0, 80) ~ '...') | raw }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_vehicule_show', {'id': vehicule.id}) }}" class="btn btn-primary">Voir détails</a>
                                <span class="text-muted">{{ vehicule.tarifJournalier }} €/jour</span>
                            </div>
                        </div>
                    </div>
                </div>
            {# S'il n'y a aucun véhicule dans cette catégorie, on affiche un message #}
            {% else %}
                <div class="col">
                    <p>Aucun véhicule dans cette catégorie pour le moment.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
