{% extends 'base.html.twig' %}

{% block title %}Véhicule :
	<h1> nom du vehicule</h1>
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="row">
		<h1 class="text-center mb-4">Notre Catalogue de Véhicules</h1>
			{% for vehicule in vehicules %}{% endfor %}
				<div class="card mb-4 shadow-sm">
                       
                        <img src="{{ asset('images/' ~ vehicule.imagePrincipale) }}" class="card-img-top" alt="{{ vehicule.nom }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ vehicule.nom }}</h5>
                            <p class="card-text">{{ vehicule.description|slice(0, 80) ~ '...' }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="#" class="btn btn-primary">Voir détails</a>
                                <span class="text-muted">{{ vehicule.tarifJournalier }} €/jour</span>
                            </div>
                        </div>
                    </div>
		</div>


	{% endblock %}
